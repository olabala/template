{
  "name": "{{ name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "main": "index.js",
  "scripts": {
    "unit": "cross-env NODE_ENV=test DEBUG=PLATO:* karma start ./test/unit/runner.js",
    "unit:dev": "npm run unit -- --watch",
    "lint": "eslint --max-warnings 10 .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ author }}/{{ name }}.git"
  },
  "keywords": [
    "{{ author }}",
    "{{ name }}"
  ],
  "author": "{{ author }}",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/{{ author }}/{{ name }}/issues"
  },
  "homepage": "https://github.com/{{ author }}/{{ name }}",
  "dependencies": {
    "platojs": "latest"
  },
  "devDependencies": {
    "plato-dev-dependencies": "latest"
  }
}
